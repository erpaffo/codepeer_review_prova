<%= form_with(model: [ @snippet, @snippet.reviews.build ], local: true) do |form| %>
  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5 %>
  </div>
  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>
  <div class="actions">
    <%= form.submit 'Aggiungi Recensione' %>
  </div>
<% end %>
