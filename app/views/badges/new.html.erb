<h1>Nuovo Badge</h1>
<%= form_with(model: @badge, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div class="actions">
    <%= form.submit 'Crea Badge' %>
  </div>
<% end %>
